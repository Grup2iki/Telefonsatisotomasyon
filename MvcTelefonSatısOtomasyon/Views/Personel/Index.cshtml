@using MvcTelefonSatısOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personelİd</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>@k.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelGetir/@k.Personelİd"
                   class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.Personelİd"
                   class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a>
            </td>
        </tr>
    }
</table>




