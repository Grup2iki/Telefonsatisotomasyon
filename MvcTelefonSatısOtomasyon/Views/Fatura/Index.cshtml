@using MvcTelefonSatısOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
     
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
      
       


    </tr>
    @foreach (var k in Model)
    {
        <tr>

            <td>@k.FaturaSeriNo</td>
            <td>@k.FaturaSıraNo</td>
            <td>@k.VergiDairesi</td>
            <td>@k.Tarih</td>
            <td>@k.Saat</td>
            <td>@k.Toplam ₺</td>
            <td>@k.TeslimEden</td>
            <td>@k.TeslimAlan</td>



            <td>
                <a href="/Fatura/FaturaGetir/@k.Faturaid"
                   class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br /><br />

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"> 
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
           </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {

                    <tr>
                        <td>@x.FaturaSeriNo</td>
                        <td>@x.FaturaSıraNo</td>
                        <td>@x.Toplam</td>
                    </tr>
                    }
                </table>
                <button type="button"class="btn btn-danger" data-dismiss="modal">Tamam</button>
                
            </div>
        </div>
    </div>
</div>


